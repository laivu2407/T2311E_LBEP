#include <stdio.h>
#include <math.h>

int main() {
    // Nh?p các h? s?
    float a, b, c;
    printf("Nhâp hê sô a: ");
    scanf("%f", &a);
    printf("Nhâp hê sô b: ");
    scanf("%f", &b);
    printf("Nhâp hê sô c: ");
    scanf("%f", &c);

    // Tính delta
    float delta = b * b - 4 * a * c;

    // Ki?m tra và hi?n th? nghi?m
    if (delta < 0) {
        printf("Phuong trình không có nghiêm th?c.\n");
    } else if (delta == 0) {
        float x = -b / (2 * a);
        printf("Phuong trình có nghiêm kép x = %.2f.\n", x);
    } else {
        float x1 = (-b + sqrt(delta)) / (2 * a);
        float x2 = (-b - sqrt(delta)) / (2 * a);
        printf("Phuong trình có hai nghiêm phân biêt:\n");
        printf("x1 = %.2f\n", x1);
        printf("x2 = %.2f\n", x2);
    }

    return 0;
}
